<div style="text-align: left;">


<form action="/stories/{{story._id}}" method="POST">
<input type="hidden" name="_method" value="PUT">
  <div class="form-group">
    <label for="title">Story Title</label>
    <input type="text" class="form-control" id="title" name="title" placeholder="Example Story" value="{{story.title}}" required>
  </div>
  <div class="form-group">
    <label for="status">Scope</label>
    <select class="form-control" id="status" name="status">
      {{#select story.status}}
      <option class="selected">public</option>
      <option>private</option>
      {{/select}}
    </select>
  </div>
  <div class="form-group">
    <label for="body">Your Story</label>
    <textarea class="form-control" id="editor" name="body" rows="3" required>{{story.body}}</textarea>
  </div>
  <div class="form-group">
      <input type="submit" class="btn btn-primary"></button>
        <a href="/dashboard" class="btn btn-danger">Cancel</a>
    </div>
</form>
</div>
<script>
     CKEDITOR.replace('body', {
            plugins: 'wysiwygarea, toolbar, basicstyles, link'
        })
</script>